#!/usr/bin/env python

import argparse

from jinjatree.core import JinjaTree


def parse():
    parser = argparse.ArgumentParser()
    parser.add_argument('path', type=str)
    return parser.parse_args()


def main():
    args = parse()
    tree = JinjaTree(args.path)
    tree.render()


if __name__ == '__main__':
    main()
